@model Web.Models.FotoViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Publicar</h2>


@using (Html.BeginForm("Create", "Foto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.USUARIO_ID, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <img id="preview" src="@Html.DisplayFor(model => model.FOTO_URL)" class="img-responsive" style="height: auto; display: inline-block" />
                <p id="filename"></p>
            </div>
            <div class="col-md-6 col-md-offset-3">
                <label for="file" class="control-label"></label>
 
                <label class="btn btn-block btn-primary">
                    Selecione uma foto <input type="file" name="file" id="file" style="display:none;" />
                </label>
            </div>
            @Html.HiddenFor(model => model.FOTO_URL, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CAPTION, htmlAttributes: new { @class = "col-md-6 col-md-offset-3" })
            <div class="col-md-6 col-md-offset-3">
                @Html.TextAreaFor(model => model.CAPTION, new { @maxlength = 255, @rows = 5, @cols = 10, @class = "form-control form-control-lg", @style = "width: 100%; max-width: 100%" } )
                @Html.ValidationMessageFor(model => model.CAPTION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-6 text-right">
                <input type="submit" value="Publicar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Timeline", "Index")
</div>


<script>

    var filename = $('#filename');

    $('input[type=file]').change(function () {

        var file = $(this).val();

        console.log(file);
        console.log(filename);

        filename[0].textContent = file;
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
