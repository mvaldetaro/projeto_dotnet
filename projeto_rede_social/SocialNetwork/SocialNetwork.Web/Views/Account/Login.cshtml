@model SocialNetwork.Web.Models.Account.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col-md-8">
        <h1>Hortagram</h1>
        <h2>Home Gardens Social Network</h2>
    </div>
    <div class="col-md-4">
        <div class="box login">
            <h2>@ViewBag.Title</h2>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "", role = "form" }))
            {
                @Html.AntiForgeryToken()
            
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new {type = "email", placeholder = "Email",  @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Senha", @class = "form-control" })
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Entrar" />
                </div>
                <hr />
                <p class="text-center"> Não tem uma conta? @Html.ActionLink("Cadastre-se", "Register")</p>
            }
        </div>
    </div>
</div>